{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Header Section -->
    <header class="text-center">
        <h1 class="display-4 fw-bold mb-4">Bienvenue sur <span class="text-primary">BrawlStars Custom</span></h1>
        <p class="lead text-muted">Explorez, créez et gérez vos compositions de Brawlers avec facilité.</p>
    </header>

    <!-- Navigation Section -->
    <section class="mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4 col-lg-3">
                <div class="card shadow border-0 bg-dark text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-people display-4 text-primary"></i>
                        <h5 class="card-title mt-3">Liste des Brawlers</h5>
                        <p class="card-text">Découvrez tous les Brawlers et leurs détails.</p>
                        <a href="{{ path('brawlers_list') }}" class="btn btn-primary">Voir les Brawlers</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card shadow border-0 bg-dark text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-layout-text-sidebar-reverse display-4 text-success"></i>
                        <h5 class="card-title mt-3">Créer une Composition</h5>
                        <p class="card-text">Composez vos équipes avec les meilleurs Brawlers.</p>
                        <a href="{{ path('composition') }}" class="btn btn-success">Créer</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card shadow border-0 bg-dark text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-search display-4 text-warning"></i>
                        <h5 class="card-title mt-3">Rechercher un Joueur</h5>
                        <p class="card-text">Trouvez les statistiques et informations des joueurs.</p>
                        <a href="{{ path('player_search') }}" class="btn btn-warning">Rechercher</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-3">
                <div class="card shadow border-0 bg-dark text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-trophy display-4 text-info"></i>
                        <h5 class="card-title mt-3">Classements</h5>
                        <p class="card-text">Découvrez les meilleurs joueurs par région.</p>
                        <a href="{{ path('rankings') }}" class="btn btn-info">Voir Classements</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Auth Section -->
    <section class="mt-5 text-center">
        <a href="{{ path('app_register') }}" class="btn btn-outline-secondary btn-lg me-2">Inscription</a>
    </section>
</div>
{% endblock %}
