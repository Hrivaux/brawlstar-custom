                        <p class="card-text">ğŸ® Niveau d'expÃ©rience : <strong>{{ playerData.expLevel }}</strong></p>
                        <p class="card-text">ğŸ’ Points d'expÃ©rience : <strong>{{ playerData.expPoints }}</strong></p>
                    </div>
                    <div class="col-md-6">
                        <p class="card-text">ğŸ’¥ Victoires 3vs3 : <strong>{{ playerData['3vs3Victories'] }}</strong></p>
                        <p class="card-text">ğŸ… Victoires solo : <strong>{{ playerData.soloVictories }}</strong></p>
                        <p class="card-text">ğŸ‘¯â€â™‚ï¸ Victoires duo : <strong>{{ playerData.duoVictories }}</strong></p>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="mt-5 mb-4 text-center text-light">Brawlers</h2>

        <!-- Liste des brawlers dans des cartes modernes -->
        <div class="row">
            {% for brawler in playerData.brawlers %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 bg-dark text-light rounded-lg hover-effect">
                        <img 
                            src="{{ asset('images/brawlers/' ~ brawler.name|lower ~ '_portrait.png') }}" 
                            class="card-img-top rounded-top-4" 
                            alt="{{ brawler.name }}"
                            style="height: 200px; object-fit: cover;"
                            onerror="this.onerror=null;this.src='{{ asset('images/brawlers/default.png') }}';">
